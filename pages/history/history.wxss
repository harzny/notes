.main-info{
  width: 676rpx;
  height: 680rpx;
  padding:0 48rpx;
  box-sizing: border-box;
}
.today-in-history{
  height: 28rpx;
  padding-top: 48rpx;
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 400;
  font-size: 14px;
  line-height: 100%;
  color: #929396;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  }
  .today-in-history>image{
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    top: 32rpx;
    right: 24rpx;
   
  }
.today{
  padding:24rpx 0;
  height: 20rpx;
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 600;
  font-size: 20px;
  line-height: 100%;
  color: #3E4041;
}
.divider{
  position: absolute;
  width: 572rpx;
  height: 2rpx;
  left: 48rpx;
  top: 164rpx;
  background: #EDEDED;
}
.get-title{
  padding-top: 48rpx;
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 600;
  font-size: 26px;
  line-height: 100%;
  color: #3E4041;
}
.get-content{
  padding-top: 48rpx;
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 400;
  font-size: 16px;
  line-height: 100%;
  color: #747474;
  }