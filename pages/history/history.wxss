/* pages/history/history.wxss */
.date-card{
  padding: 16rpx 68rpx;
}
.date-main{
  width: 614rpx;
  height: 132rpx;
  background: #EDEDED;
  box-shadow: inset 0rpx 0rpx 12rpx rgba(197, 204, 217, 0.25);
  border-radius: 12rpx;
  padding: 24rpx 22rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-evenly;
}
.card-item{
  background-image: linear-gradient(to bottom,white 0% , white 49%,#E7E7E7 49%,#E7E7E7 54%, white 54%, white 100%);
  box-shadow: 0px 4rpx 10rpx rgba(178, 178, 178, 0.25);
  border-radius: 12rpx;
  width: 56rpx;
  height: 84rpx;
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 600;
  font-size: 60rpx;
  color: #3E4041;     
  text-align: center;
}
.split{
  width: 10rpx;
  height: 15rpx;
  align-self: flex-end;
}
.history-main{
  padding: 32rpx 56rpx;
}
.history-item{
  display: flex;
  margin-bottom: 50rpx;
}
.title{
  font-weight: 600;
  font-size: 36rpx;
  color: #3E4041;
  margin-right: 24rpx;
}
.info{
  font-size: 36rpx;
  color: #3E4041;
  /* 换行 */
  white-space: normal;
  word-break: break-all;
}
/* .van-hairline--top{

