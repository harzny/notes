/* pages/list/list.wxss */
.my-container{
  width: 100%;
  height: 100%;
  background: #F8F8F8;
}
.van-field__body{
  width: 500rpx;
}
.search-cell{
  width: 100%;
  height: 92rpx;
  background: #fff;
  display: flex;
  /* align-items: center; */
  line-height: 28rpx;
  /* padding: 0 24rpx; */
}
.search-img{
    width: 40rpx;
    height: 40rpx;
    margin-top: 5rpx;
    margin-right: 28rpx;
}
.my-main{
  width: 100%;
  height: calc(100vh - 92rpx);
  padding: 32rpx 24rpx;
  box-sizing: border-box;
}
.tips{
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 400;
  font-size: 28rpx;
  color: #999999;
}

.tools{
  position: fixed;
  bottom: 70rpx;
  left: 87.73%;
  right: 0.53%;
  display: flex;
  flex-direction: column;
}
.tools image{
  width: 80rpx;
  height: 80rpx;
  margin-top: 16rpx;
}
.note-item {
  width: 702rpx;
  height: 104rpx;
  background-color: #fff;
  margin-bottom: 16rpx;
  padding: 24rpx 20rpx 20rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.note-info{
  font-family: 'PingFang SC';
  font-style: normal;
  font-weight: 400;
  font-size: 28rpx;
}
.more-btn{
  width: 6rpx;
  height: 30rpx;
  padding: 30rpx;
}
.note-info view:nth-child(2){
  font-size: 20rpx;
  color:  #D1D1D1;
}
.my-cell-group{
  width: 360rpx;
  height: 100vh;
  background-color: #fff;
}
.note-icons{
  display: flex;
  align-items: center;  
}
.top-btn,.lock-btn{
  width: 28rpx;
  height: 28rpx;
  margin-left:22rpx ;
}
.input-cell .van-field__control{
    width: 526rpx !important;
    height: 72rpx !important;
    background: #F7F8F8 !important;
    border: 2rpx solid #EFF0F1 !important;
    border-radius: 40rpx ;
    padding:0 64rpx !important;
    box-sizing: border-box  !important;
  }
  .input-cell .van-field__body{
    width: 526rpx;
    margin: 64rpx auto 0;
  }

.submit-btn {
  width: 224rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: #648CEB;
  box-shadow: 0px 2rpx 10rpx #5F82D6;
  border-radius: 40rpx;
  color: #ffffff;
  /* padding-top: 72rpx; */
  margin-top: 48rpx;
  margin-bottom: 36rpx;
  border: none;
}

button[disabled]:not([type]){
  background: #DEE0EB;
  box-shadow: 0px 2rpx 14rpx #E2E5F0;
  border-radius: 40rpx;
  color: white;
}